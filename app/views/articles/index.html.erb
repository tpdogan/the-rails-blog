<h1>All Articles</h1>

<ul id = "listedArticles">
  <% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article),
      class: "article_title", id: "article#{article.id}" %>
  </li>
  <% end %>
</ul>

<br/>
<%= link_to "All Tags", tags_path %>

<%= link_to "Create a New Article", new_article_path,
  class: "new_article" %>